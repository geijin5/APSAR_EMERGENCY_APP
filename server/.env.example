# Server Configuration
NODE_ENV=production
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@host:5432/apsar_db

# JWT Authentication
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS
ALLOWED_ORIGINS=https://apsar-emergency-app.onrender.com,https://api.anaconda-deerlodge-emergency.gov

# File Storage (AWS S3 or similar)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=apsar-uploads

# Email (SendGrid, AWS SES, etc.)
EMAIL_SERVICE_API_KEY=
EMAIL_FROM=noreply@apsar.org

# SMS (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Push Notifications
FCM_SERVER_KEY=
