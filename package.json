{
  "name": "apsar-emergency-app",
  "version": "1.0.0",
  "description": "Anaconda Pintler Search and Rescue Emergency Operations Management System",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint .",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:android-bundle": "cd android && ./gradlew bundleRelease",
    "postinstall": "node -e \"if (process.platform === 'darwin') { require('child_process').exec('cd ios && pod install', (err) => { if (err) console.log('Pod install skipped'); }); }\""
  },
  "dependencies": {
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "react": "18.2.0",
    "react-native": "0.73.0",
    "react-native-paper": "^5.11.1",
    "react-native-vector-icons": "^10.0.3",
    "react-native-gesture-handler": "^2.14.0",
    "react-native-safe-area-context": "^4.8.2",
    "react-native-screens": "^3.29.0",
    "react-native-encrypted-storage": "^4.0.3",
    "axios": "^1.6.2",
    "react-native-push-notification": "^8.1.1",
    "@react-native-async-storage/async-storage": "^1.21.0",
    "react-native-image-picker": "^7.0.3",
    "react-native-document-picker": "^9.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/eslint-config": "^0.73.1",
    "@react-native/metro-config": "^0.73.2",
    "@react-native/typescript-config": "^0.73.1",
    "@types/react": "^18.2.6",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.6.3",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "prettier": "^2.8.8",
    "react-test-renderer": "18.2.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

